{
    "version": "2.0.0",

    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Program Files\\PowerShell\\7-preview\\pwsh.exe",
                "args": ["-NoProfile", "-Command"]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "pwsh",
                "args": ["-NoProfile", "-Command"]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": ["-NoProfile", "-Command"]
            }
        }
    },
    
    "tasks": [
        {
            "label": "Build",
            "command": "& ${cwd}/Build.ps1",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Test",
            "command": "& ${cwd}/Tests/RunTests.ps1",
            "type": "shell",
            "problemMatcher": ["$pester"]
        }
    ]
}
