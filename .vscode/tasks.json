{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "Invoke-Psake ${cwd}/psakefile.ps1 -TaskList Compile",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$pester"
        },
        {
            "label": "Test",
            "command": "Invoke-Psake ${cwd}/psakefile.ps1 -TaskList Test",
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$pester"
        }
    ]
}